@model UserInfo
@{
    ViewData["Title"] = "getUserInfo";
    ViewData["HideNavigations"] = true;
}
<form asp-controller="Account" asp-action="SignUpProcess" method="post">
    <div class="row d-flex justify-content-center mt-sm-5">
        <div class="col-sm-11 col-lg-4 col-md-5 d-flex justify-content-center  p-5" style="flex-direction:column; border:solid;">
            <label asp-for="Fname">First Name</label>
            <input asp-for="Fname" type="text" id="Fname" name="Fname" />
            <label asp-for="Lname">Last Name</label>
            <input asp-for="Lname" type="text" id="Lname" name="Lname" />
            <label asp-for="Phone">Phone Number</label>
            <input asp-for="Phone" type="number" id="Phone" name="Phone" />
            <label asp-for="birthday">Birthday</label>
            <input asp-for="birthday" type="date" id="birthday" name="birthday" />
            <h5 class="m-3 text-dark">@ViewBag.message</h5>
            <div class="d-flex flex-lg-column flex-sm-column flex-md-column justify-content-center">
                <button type="submit" class="btn btn-primary mb-2 ">Sign up</button>
            </div>

        </div>
    </div>
</form>