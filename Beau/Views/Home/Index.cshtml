@model Beau.Models.UserInfo
<div class="maincontainer text-center">
    <div>
        <h1 class="display-4">Welcome @ViewBag.name</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>
    
    <div class="row custom-card">
        <div class="card-body">
            <div class="post-container col-lg-12 d-flex">
                    <a class="content btn btn-white btn-sm pointer-cursor text-decoration-none" asp-controller="Post" asp-action="CreatePostView">What's on your BRAIN? </a>
            </div>
        </div>
    </div>
    @if(Model != null)
    {
        <h2>Notes</h2>
        @foreach (var post in Model.Posts)
        {
            <div class="custom-card">
                <h5>@post.PostDate</h5>
                <p>@post.Status</p>
            </div>
        }
    }
    else
    {
        <h2>Nothing to Show</h2>
    }

</div>
